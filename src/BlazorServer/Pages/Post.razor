@page "/Post"
@inherits PostBase

<EditForm EditContext="EditContext">
    <DataAnnotationsValidator />
    <ValidationSummary />
    @*<InputNumber @bind-Value="Post!.Id"></InputNumber>*@
    <div class="form-group">
        <label for="CreateDateTime">创建时间</label>
        <input type="text" @bind="Post!.CreateDateTime" @bind:format="yyyy-MM-dd HH:mm:ss" id="CreateDateTime" class="form-control w-25" />
        @Post?.Title
    </div>
    <div class="form-group">
        <label for="title">标题</label>
        <input type="text" @bind="Post!.Title" @bind:event="oninput" id="title" class="form-control w-25" />
        @Post?.Title
    </div>
    
    <div class="form-group">
        <label for="content">内容</label>
        <InputTextArea @bind-Value="Post!.Content" id="content" class="form-control 2-25" rows="4"></InputTextArea>
    </div>

    <button type="submit" class="btn btn-info">Submit</button>

</EditForm>