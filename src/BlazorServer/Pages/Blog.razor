@page "/Blog"
@inherits BlogBase

@if (Blog == null)
{
    <p>Loading</p>
}
else
{
    <div class="form-group">
        <label>博客名称</label>
        <input @bind-value="Blog.Name" class="form-control w-25"/>
    </div>
    if (Blog.Posts != null)
    {
        foreach (var post in Blog.Posts)
        {
            <div class="border rounded p-3 w-25">
                <Post Post="post"></Post>
            </div>
        }
    }
}